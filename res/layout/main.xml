	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="bottom">
    <ImageView android:id="@+id/imageView1" android:layout_height="wrap_content" android:src="@drawable/bg2" android:layout_width="match_parent" android:layout_above="@+id/button1" android:layout_alignParentTop="true" android:scaleType="fitXY"></ImageView>
		<Button android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/button1" android:text="Update Contacts" android:layout_above="@+id/textView1" android:layout_alignParentLeft="true"></Button>
		<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceSmall" android:text="www.mandoz.com" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"></TextView>
</RelativeLayout>
